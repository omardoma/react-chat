{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "test-utils": ["./test/test-utils"]
    }
  },
  "exclude": ["node_modules", "test", "**/*.{spec,test}.{ts,tsx}"]
}
